<!DOCTYPE html>
<html>
<head>
  <title>Dp</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="container">
    <div id="header">
      <h1><a href="/">Drama Comments</a></h1>
      <% if user_signed_in? then %>
      <div>
      		<ul class="hmenu">
      			<p>Hi, <%= current_user.email %></p>
      			<li><%= link_to('Edit registration', edit_user_registration_path) %></li>
      			<li style = "color:white">|</li>
  				<li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
			</ul>
		</div>	
		<% elsif admin_signed_in? then%>	
			<div>
      		<ul class="hmenu">
      			<p>Hi, <%= current_admin.email %></p>
      			<li><%= link_to('Edit registration', edit_admin_registration_path) %></li>
      			<li style = "color:white">|</li>
  				<li><%= link_to('Logout', destroy_admin_session_path, :method => :delete) %></li>
			</ul>
			</div>	
		<% end %>

    </div>    
    <div id="wrapper" class="wat-cf">
      <div id="main">
        <%= yield %>
      </div>
      <div id="footer"
            <p><center>Copyright &copy; HUSTMAN @ KEIO UNIVERSITY 2012</center></p>
      </div>
    </div>    
  </div>
</body>
</html>
