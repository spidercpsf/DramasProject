<div class="showdrama">
  <p class = "dramatitle">
      <%= @drama.name %>
    </p>
    
  <div class = "poster">
    </div>
    
  <div class = "dramainfo"> 
    <p>
      <strong>Rating:</strong>
      <%= @drama.rating %>
    </p>
    <p>
      <strong>Genre:</strong>
      <% gr= @drama.genre  %>
      <%= gr.name %>
    </p>
    <p>
      <strong>Episode:</strong>
      <%= @drama.episode %>
    </p>
  </div>
  
  <p class = "title">Synopsis<p>
  <div class = "dramasynopsis">
    <p><%= @drama.info %>
    </p>
  </div>

  <p class = "title">Cast</p>  
	<div class = "dramacast">
     <p><% listCast=@drama.cast_drama %>
    	<% listCast.each do |a| %>
           <%= a.cast.name%> 
        <% end %>
     </p>
 	 </div>  
  
  <p class = "title">Number of Comments<p>
  	
  <div class = "comments">
      <% @drama.comment.each do |cmt|  %>
          <p><%= cmt.comment %></p><br>
      <% end %>
  </div>
	
	<p class = "title">Write your comment</p>  
	<div class = "postcomment">
    <%= form_for @cmt  , :url => {:controller => "comments" , :action => "new" , :method => :post} do |f| %>
            <div class="field">
                <%= f.text_area :comment, :class => "textarea_comment" %>
            </div>
            <div class="actions">
                <%= f.hidden_field :drama_id ,:value => @drama.id  %>
                <%= f.hidden_field :user_id ,:value => current_user.id  %>
                <%= f.submit "Post Comment", :class => "post_button" %>
            </div>
        <% end %>
	</div>
	
</div>
