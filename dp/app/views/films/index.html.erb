<h1>Listing films</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Genre</th>
    <th>Info</th>
    <th>Rating</th>
    <th>Episode</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @films.each do |film| %>
  <tr>
    <td><%= film.name %></td>
    <td><%= film.genre_id %></td>
    <td><%= film.info %></td>
    <td><%= film.rating %></td>
    <td><%= film.episode %></td>
    <td><%= link_to 'Show', film %></td>
    <td><%= link_to 'Edit', edit_film_path(film) %></td>
    <td><%= link_to 'Destroy', film, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

