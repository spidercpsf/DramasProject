<h1>Listing casts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Info</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @casts.each do |cast| %>
  <tr>
    <td><%= cast.name %></td>
    <td><%= cast.info %></td>
    <td><%= link_to 'Show', cast %></td>
    <td><%= link_to 'Edit', edit_cast_path(cast) %></td>
    <td><%= link_to 'Destroy', cast, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

